<Window x:Class="rgb_michacka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rgb_michacka"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <Rectangle x:Name="recColor" Grid.Row="0" Grid.ColumnSpan="3" Fill="Black" Margin="0,0,0,20" Stroke="Black" StrokeThickness="1"/>

        <Label Content="R" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" Foreground="Red"/>
        <Slider x:Name="sldRed" Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="255" TickFrequency="1" IsSnapToTickEnabled="True" VerticalAlignment="Center" Margin="5" ValueChanged="Slider_ValueChanged"/>
        <TextBox x:Name="txtRed" Grid.Row="1" Grid.Column="2" Text="0" VerticalAlignment="Center" PreviewTextInput="Integer_PreviewTextInput" TextChanged="TextBox_TextChanged"/>

        <Label Content="G" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" Foreground="Green"/>
        <Slider x:Name="sldGreen" Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="255" TickFrequency="1" IsSnapToTickEnabled="True" VerticalAlignment="Center" Margin="5" ValueChanged="Slider_ValueChanged"/>
        <TextBox x:Name="txtGreen" Grid.Row="2" Grid.Column="2" Text="0" VerticalAlignment="Center" PreviewTextInput="Integer_PreviewTextInput" TextChanged="TextBox_TextChanged"/>

        <Label Content="B" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" Foreground="Blue"/>
        <Slider x:Name="sldBlue" Grid.Row="3" Grid.Column="1" Minimum="0" Maximum="255" TickFrequency="1" IsSnapToTickEnabled="True" VerticalAlignment="Center" Margin="5" ValueChanged="Slider_ValueChanged"/>
        <TextBox x:Name="txtBlue" Grid.Row="3" Grid.Column="2" Text="0" VerticalAlignment="Center" PreviewTextInput="Integer_PreviewTextInput" TextChanged="TextBox_TextChanged"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Label Content="Hex code:" FontWeight="Bold"/>
            <Label x:Name="lblHex" Content="#000000" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
